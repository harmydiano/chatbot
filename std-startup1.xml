<aiml version="1.0.1" encoding="UTF-8">
    <!-- std-startup.xml -->

    <!-- Category is an atomic AIML unit -->
    <category>

        <!-- Pattern to match in user input -->
        <!-- If user enters "LOAD AIML B" -->
        <pattern>LOAD AIML B</pattern>

        <!-- Template is the response to the pattern -->
        <!-- This learn an aiml file -->
        <template>
            <!-- <learn>alice/reduction/*.aiml</learn>
            <learn>alice/*.aiml</learn> -->
			<learn>aiml/core/defaults/*.aiml</learn>
			<learn>aiml/core/are/*.aiml</learn>
			<learn>aiml/core/can/*.aiml</learn>
			<learn>aiml/core/do/*.aiml</learn>
			<learn>aiml/core/have/*.aiml</learn>
			<learn>aiml/core/how/*.aiml</learn>
			<learn>aiml/core/i/*.aiml</learn>
			<learn>aiml/core/is/*.aiml</learn>
			<learn>aiml/core/that/*.aiml</learn>
			<learn>aiml/core/we/*.aiml</learn>
			<learn>aiml/core/what/*.aiml</learn>
			<learn>aiml/core/when/*.aiml</learn>
			<learn>aiml/core/where/*.aiml</learn>
			<learn>aiml/core/which/*.aiml</learn>
			<learn>aiml/core/why/*.aiml</learn>
			<learn>aiml/core/will/*.aiml</learn>
			<learn>aiml/core/you/*.aiml</learn>
			<learn>aiml/core/who/*.aiml</learn>
			<learn>aiml/core/defaults/*.aiml</learn>
			<learn>aiml/core/defaults/familair/*.aiml</learn>
			<learn>aiml/core/defaults/phrases/*.aiml</learn>
			<learn>aiml/core/defaults/profile/*.aiml</learn>
			<learn>aiml/core/defaults/topics/*.aiml</learn>
			<learn>aiml/core/defaults/word_patterns/*.aiml</learn>
			<learn>aiml/core/defaults/yesno/*.aiml</learn>
			<learn>aiml/core/reductions/actions/*.aiml</learn>
			<learn>aiml/core/reductions/profile/*.aiml</learn>
			<learn>aiml/core/reductions/questions/*.aiml</learn>
			
            <learn>*.aiml</learn>
            <!-- You can add more aiml files here -->
            <!--<learn>more_aiml.aiml</learn>-->
        </template>
        
    </category>
	
	<sentence-splitters>
		<splitter value="."/>
		<splitter value="!"/>
		<splitter value="?"/>
	</sentence-splitters>

</aiml>